{
  "info": {
    "name": "LoanWise API Collection",
    "_postman_id": "loanwise-api-collection-id",
    "description": "Postman collection for testing LoanWise API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/auth/register",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"demo123\",\n  \"role\": \"Borrower\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/auth/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"demo123\"\n}"
        }
      }
    },
    {
      "name": "Get My Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/users/me",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "users",
            "me"
          ]
        }
      }
    },
    {
      "name": "Borrower - Apply for Loan",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/loans/apply",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "loans",
            "apply"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 10000,\n  \"durationInMonths\": 12,\n  \"purpose\": \"HomeImprovement\",\n  \"description\": \"Need funds for renovation\",\n  \"monthlyIncome\": 3000\n}"
        }
      }
    },
    {
      "name": "Borrower - My Loans",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/loans/my",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "loans",
            "my"
          ]
        }
      }
    },
    {
      "name": "Lender - Open Loans",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/loans/open",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "loans",
            "open"
          ]
        }
      }
    },
    {
      "name": "Lender - Fund Loan",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/loans/fund/{{loanId}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "loans",
            "fund",
            "{{loanId}}"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 500\n}"
        }
      }
    },
    {
      "name": "Borrower - Repayments",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/loans/repayments?loanId={{loanId}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "loans",
            "repayments"
          ],
          "query": [
            {
              "key": "loanId",
              "value": "{{loanId}}"
            }
          ]
        }
      }
    },
    {
      "name": "Borrower - Make Repayment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/loans/repay/{{repaymentId}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "loans",
            "repay",
            "{{repaymentId}}"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "loanId",
      "value": ""
    },
    {
      "key": "repaymentId",
      "value": ""
    }
  ]
}